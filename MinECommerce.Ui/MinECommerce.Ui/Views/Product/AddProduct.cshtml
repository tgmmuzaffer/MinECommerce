@using MinECommerce.Service.Dtos
@model ProductDto
@{
    ViewData["Title"] = "Add Product ";
    var featureList = ViewBag.discountlist as List<MinECommerce.Entity.Feature>;
}
<form class="row g-3" asp-controller="Product" asp-action="AddProduct" method="post" enctype="multipart/form-data">
    <div class="col-md-6">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="col-md-6">
        <label class="form-label" asp-for="Price"></label>
        <input class="form-control" asp-for="Price">
    </div>
    <div class="col-md-6">
        <label class="form-label" asp-for="Price"></label>
        <input class="form-control" asp-for="Price">
    </div>
    @if (featureList != null && featureList.Count > 0)
    {
        <div class="col-md-6">
            <label class="form-label" asp-for="FeaturIds"></label>
            <select multiple class="selectpicker" asp-for="FeaturIds" data-none-selected-text="Make at least one choice ">
                @foreach (var item in featureList)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
    }

    <div class="form-group mt-3">
        <label asp-for="Image" style="display:block;">Product Image</label>
        <input asp-for="Image" type="file" class="form-control-file mt-1">
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Send</button>
    </div>
</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha512-LCNYs7jH7Odmoc6adflrhgpq0cJmq8fwQJq3ICCBuk8BKFwA0PL6pVgVcKFnfNc0dJ+UmFp5sYvjG+jjlh7nXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
